<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">
<LinearLayout
    android:id="@+id/homelinearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="7">
    <ImageView
        android:id="@+id/res_img"
        android:layout_marginLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:src="@drawable/icon"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_weight="3.5"
        android:orientation="vertical">
    <TextView
        android:id="@+id/res_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restraunt Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:textColor="#000"
        />

        <TextView
            android:id="@+id/res_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost per person"
            android:gravity="center"
            android:drawableLeft="@drawable/rupee_symbol"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/res_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_favorite_border_24"/>
        <TextView
            android:id="@+id/res_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rating"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:textColor="#FFFB8C00"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_star_24"/>

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>